<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/twitterLayout"
    android:background="@drawable/blue_round_corners_background"
    android:padding="@dimen/login_root_padding">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:id="@+id/imageProfil"
        android:src="@drawable/ic_twitter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_blue_round_corners_selector"
        android:textColor="@drawable/blue_white_text_selector"
        android:text="ReTweet"
        android:id="@+id/button2"
        android:layout_below="@+id/imageProfil"
        android:layout_alignRight="@+id/imageProfil"
        android:layout_alignEnd="@+id/imageProfil" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_blue_round_corners_selector"
            android:textColor="@drawable/blue_white_text_selector"
            android:layout_toRightOf="@+id/imageProfil"
            android:id="@+id/tweetListItemNameTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/white_blue_round_corners_selector"
            android:textColor="@drawable/blue_white_text_selector"
            android:layout_toRightOf="@+id/tweetListItemNameTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/tweetListItemAliasTextView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/white_blue_round_corners_selector"
            android:textColor="@drawable/blue_white_text_selector"
            android:id="@+id/tweetListItemTextView"
            android:layout_alignBottom="@+id/button2"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tweetListItemNameTextView"
            android:layout_alignStart="@+id/tweetListItemNameTextView" />




</RelativeLayout>

